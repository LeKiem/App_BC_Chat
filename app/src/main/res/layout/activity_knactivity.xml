<!--                    </com.google.android.material.tabs.TabLayout>-->

<!--                    <View-->
<!--                        android:id="@+id/view2"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="1dp"-->
<!--                        android:background="#d8d8d8" />-->
