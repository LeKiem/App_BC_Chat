<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/hinhAnh"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/item_tt_2" />

                <LinearLayout
                    android:id="@+id/thaoTac"
                    android:layout_alignParentEnd="true"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <ImageButton
                            android:text="Cập nhật món ăn"
                            android:background="@drawable/button_theme_02"
                            android:id="@+id/capNhat"
                            android:src="@drawable/round_edit"
                            android:backgroundTint="#B3FFEB3B"
                            android:layout_marginEnd="10dp"
                            android:layout_height="50dp"
                            android:layout_width="50dp"/>
                        <ImageButton
                            android:background="@drawable/button_theme_02"
                            android:text="Cập nhật món ăn"
                            android:id="@+id/xoa"
                            android:src="@drawable/round_delete_24"
                            android:backgroundTint="#B3DC3333"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            app:tint="@color/white" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tenTt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hinhAnh"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:padding="12dp"
                    android:text="Tên tin tuc"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_below="@id/tenTt"
                    android:id="@+id/moTa"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:text="Mô tả"
                    android:layout_marginStart="10dp"
                    android:paddingVertical="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingHorizontal="12dp"
                    android:textSize="16sp" />

        </RelativeLayout>

</RelativeLayout>