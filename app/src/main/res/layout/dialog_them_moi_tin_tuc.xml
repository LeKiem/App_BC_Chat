<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/hinhTT"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_item_new_1" />
   <RelativeLayout
       android:layout_width="wrap_content"
       android:padding="10dp"
       android:layout_below="@id/hinhTT"
       android:layout_height="wrap_content">
       <EditText
           android:id="@+id/tenTT"
           android:layout_marginBottom="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Tiêu đề"
           android:background="@drawable/shape_rect02"
           android:inputType="textPersonName|textCapWords"
           android:padding="12dp" />

       <EditText
           android:background="@drawable/shape_rect02"
           android:id="@+id/moTa"
           android:gravity="top|start"
           android:drawableTint="@color/colorGray02"
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:layout_marginBottom="10dp"
           android:layout_below="@id/tenTT"
           android:hint="Mô tả"
           android:inputType="textCapSentences|textMultiLine"
           android:padding="12dp" />

       <!--Whether or not product on discount-->


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/moTa"
           android:layout_marginBottom="10dp"
           android:id="@+id/linear2"
           android:orientation="horizontal">


       </LinearLayout>


       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/themSp"
           android:layout_marginTop="10dp"
           style="@android:style/Widget.Button"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginEnd="16dp"
           android:layout_below="@id/linear2"
           android:background="@drawable/background_btn_login"
           android:text="Thêm mới"
           android:textColor="@color/white"
           android:textSize="22dp"
           android:textStyle="bold" />
   </RelativeLayout>

</RelativeLayout>